<%- include(`./partials/root/header`) %>

<div>
    <h6 class="dateclass"><%= new Intl.DateTimeFormat('en-GB', { year: 'numeric' , month: 'long' , day: '2-digit' }).format(new Date()) %></h6>
    </div>
    <table  >
      <div class="sectionresult">
        <%if(currentUser){%>
            <%if(currentUser.role.includes('admin')){%>
                <a  class="buttonresultfr" href="/result/addresult">Add Result Data</a>
            <%}%>
        <%}%>
      </div>
    <tr>

    <th colspan=3 class="thbghead">

      <%if(currentUser){%>
        <%if(currentUser.role.includes('admin')){%>
          <%if(heading && Object.keys(heading)){%>
          <form method="POST" action="/heading/<%=heading._id%>/update?_method=PATCH">
            <input type="text" name="heading" value="<%=heading.heading%>" placeholder="Update heading" required>
          
           <input type="submit" value="Update Heading">
          </form>
       <%} else {%>
        <form method="POST" action="/heading">
          <input type="text" name="heading" value="" placeholder="Add Heading" required>
        
         <input type="submit" value="Add Heading">
        </form>
        <%}%>
       <%}%>
    <%} else {%>
      <%= heading ? heading.heading: `Not Assigned`%>
    <%}%>

    </th>
    </tr>
    <%if(result.length>0){%>
        <%result.forEach((data)=>{%>
            <tr>
                <th class="thbg thwid" >F/R(<%=data.round1.time%>)</th>
                <th class="thbg thwid">S/R(<%=data.round2.time%>)</th>

                <%if(currentUser){%>
                    <%if(currentUser.role.includes('admin')){%>
                    <th class="thbg thwid" >Action</th>
                    <%}%>
                <%}%>

            </tr>
            <tr>
                <td><%=data.round1.result%></td>
                <td><%=data.round2.result%></td>
                <%if(currentUser){%>
                    <%if(currentUser.role.includes('admin')){%>
                      <td>
                        <form action="/result/<%=data._id %>/delete?_method=DELETE" method="POST">
                            <button class="buttondelete" class="">Delete
                            </button>
                        </form>
                      </td>
                   <%}%>
                <%}%>
            </tr>
        <%})%>
   <%}else{%>

          <th class="thbg thwid" >F/R [XX]</th>
          <th class="thbg thwid" >S/R [XX]</th>
        <tr>
          <td >XX</td>
          <td >XX</td>
        </tr>   
    <%}%>

